<Page x:Class="ahif_academy.pages.PageEnglisch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ahif_academy.pages"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1075"
      Title="PageEnglisch">

    <Grid Background="{DynamicResource FrameBackground}">
        <StackPanel>
            <TextBlock Name="EnglishTextBlock" FontSize="24" TextAlignment="Center" Margin="10" Foreground="Black"/>
            <Button Content="Lösung" Click="ShowAnswer_Click" Margin="10" FontSize="20"/>
            <TextBlock Name="GermanTextBlock" FontSize="24" TextAlignment="Center" Margin="10" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Vorherige" Click="Previous_Click" Margin="10" />
                <Button Content="Nächste" Click="Next_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
